{
  "manifest_version": 3,
  "name": "Queens Solver",
  "description": "LinkedIn Queens puzzle solver.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/games/queens/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
